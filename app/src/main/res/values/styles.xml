<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DateDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="ForgotPasswordDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="ChangeFoodQuantityDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="EditMealItemDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>


    <style name="LoadingDialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/browser_actions_bg_grey</item>
    </style>




</resources>
