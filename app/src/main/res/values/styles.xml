<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="DateDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="ForgotPasswordDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="ChangeFoodQuantityDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="EditMealItemDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>


    <style name="LoadingDialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/browser_actions_bg_grey</item>
    </style>


    <style name="InputTil" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/inputTextColor</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:colorControlNormal">@color/grayDisabled</item>
        <item name="android:colorControlActivated">@color/grayDarkBackground</item>
        <item name="android:colorControlHighlight">@color/grayDarkBackground</item>
    </style>

    <style name="InputEditText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grayDarkBackground</item>
        <item name="android:textColorHint">@color/grayDisabled</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:colorControlNormal">@color/grayDisabled</item>
        <item name="android:colorControlActivated">@color/grayDarkBackground</item>
        <item name="android:colorControlHighlight">@color/grayDarkBackground</item>
    </style>


    <style name="InputButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/imagesize_small</item>
        <item name="android:layout_marginTop">@dimen/margin_3xlarge</item>
        <item name="android:background">@drawable/shape_rounded_filled_noborder</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
